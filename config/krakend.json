{
    "version": 2,
    "plugin": {
        "pattern":".so",
        "folder": "plugins/"
    },
    "timeout": "15000ms",
    "cache_ttl": "30s",
    "port":"8080",
    "endpoints": [
        {{ range $idx, $endpoint := .eth.endpoints }}
        {{if $idx}},{{end}}
        {
        "endpoint": "{{ $endpoint.endpoint }}",
        "input_query_strings":["*"],
        "method":"{{ $endpoint.method }}",
        "output_encoding": "no-op",
        "backend": [
            {
                "url_pattern": "{{ $endpoint.backend }}",
                "method":"{{ $endpoint.method }}",
                "encoding": "no-op",
                "host":{{ include "eth_address.tmpl" }},
                "extra_config": {
                    {{ include "rate_limit_backend.tmpl" }}
                }
            }
          ]
        }
        {{ end }}
