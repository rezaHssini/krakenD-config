            "name": [ "krakend-basic-auth" ],
            "krakend-basic-auth": {
                "htpasswd_path": "{{ .service.path_to_htpasswd }}",
                "endpoints": [
                    {{ range $idx, $endpoint := .eth.endpoints }}
                    {{if $idx}},{{end}}
